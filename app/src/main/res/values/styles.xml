<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dices" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dicesMargin</item>
        <item name="android:padding">@dimen/dicesPadding</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dicesLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dicesLayoutSize</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/dicesLayoutSideMargin</item>
        <item name="android:layout_marginRight">@dimen/dicesLayoutSideMargin</item>
        <item name="android:layout_marginBottom">@dimen/dicesLayoutBottomMargin</item>
    </style>

    <style name="dicesRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
